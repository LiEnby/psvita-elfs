<?xml version="1.0" encoding="utf-8"?>
<system_settings version="1.0" plugin="bluetooth_settings_plugin">

  <!-- Bluetooth®設定 -->
  <setting_list id="id_bluetooth_settings" title="msg_bt_settings">

    <!-- Bluetooth®機能 -->
    <toggle_switch id="id_bt_enable"
                   title="msg_bt"
                   key="/CONFIG/BT/bt_enable"
                   icon="tex_spanner" />

    <!--<spacer id="boxspacer1" />-->
    
    <!-- Bluetooth®機器設定 -->
    <label id="id_bt_device_settings"
           title="msg_bt_device_settings"
           icon="tex_spanner" />
   
    <!-- 検索中です (登録された機器も見つかった機器もない時のみ表示) -->
    <label id="id_searching"
           title="msg_searching" />
     
    <!-- 登録されている機器(表示しないので空の Element)  -->
    <user_custom id="id_saved_device" />
    
    <spacer id="id_saved_device_spacer" />
    
    <!-- 周辺で見つかった機器(表示しないので空の Element) -->
    <user_custom id="id_found_device" />

    <!--<spacer id="id_found_device_spacer" />-->

    <!-- Bluetooth®機器によっては準備... -->
    <label id="id_search_info"
           title="" description="msg_bt_search_information" />

    <!--<spacer id="boxspacer5" />-->

    <!-- Bluetooth®機器のマイク.... -->
    <toggle_switch id="id_mic_priority_bt"
                   title="msg_mic_priority_bt"
                   hint="msg_mic_priority_bt_info"
                   icon="tex_spanner" />
  </setting_list>
</system_settings>
